<Window x:Class="BilibiliVideoSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bilibili Video Search" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="searchTextBox" Height="30" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Button x:Name="searchButton" Content="Search" Height="30" Margin="10,50,10,0" VerticalAlignment="Top" Click="SearchButton_Click"/>
        <ListView x:Name="resultsListView" Margin="10,90,10,10"></ListView>
    </Grid>
</Window>
